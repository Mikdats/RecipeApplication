@using Entities.Concrete
@model List<Category>
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container"> 
    <br />
    <h3>Kategori Listesi</h3>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>               
                <th>Kategori Adı</th>                             
                                           
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>             
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>                
                <td>
                    <a asp-action="Update" asp-route-id="@item.CategoryId" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                </td>

            </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="~/Category/Add" role="button">Yeni Kategori Ekle</a>
   
</div>

 @section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json',
                },
            });
        });
    </script>
}

