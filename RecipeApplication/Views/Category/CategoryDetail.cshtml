@using Entities.Concrete
@model List<Recipe>
@{
    ViewData["Title"] = "CategoryDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container"> 
    <br />
    <h3>Tarifler Listesi</h3>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>               
                <th>Yemek Adı</th>                                                                                                                   
                <th>Detay</th>                             
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>             
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>                               
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>  
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                </td>

            </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="~/Category/GetAll" role="button">Kategorilere Dön</a>
   
</div>



